{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "preserve",
        "experimentalDecorators": true,
        "outDir": "build"
    },
    "filesGlob": [
        "**/**/*.{ts,tsx}"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "compileOnSave": false
}
